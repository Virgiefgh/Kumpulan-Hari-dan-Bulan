#include<iostream.h>
#include<stdio.h>
#include<conio.h>

main(){
int hari,bulan,pilih;
char jwb;

lagi:
clrscr();
cout<<"Pilih Menu :"<<endl;
cout<<"1. Penentuan Hari"<<endl;
cout<<"2. Penentuan Bulan"<<endl;
